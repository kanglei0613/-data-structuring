      ],
      "source": [
        "def recursive_sum(n):\n",
        "    if n == 1:\n",
        "        return 1\n",
        "    else:\n",
        "        return recursive_sum(n - 1) + n\n",
        "\n",
        "n = int(input(\"請輸入 n 值？\"))\n",
        "result = recursive_sum(n)\n",
        "print(f\"1+2+...+{n} 為 {result}\")\n"
      ]
